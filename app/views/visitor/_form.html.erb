<section id="cover">
    <div id="cover-caption">
        <div id="container" class="container">
            <div class="row text-white">
                <div class="col-sm-6 offset-sm-3 text-center">
                
                    <h1 class="display-10">DEMANDE DE CONTACT</h1></br>
                    <div class="info-form">
                        <%= form_for @visitor, url: visitor_index_path, html: {action: :post, class: "form-signin mt-3" } do |f| %>
                          <div class="form-group">
                           <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder: "Nom", class: "form-control" %>
                          </div>
                          <div class="form-group">
                                <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: "Prénom", class: "form-control" %>
                            </div>
                            <div class="form-group">
                            <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", placeholder: "Numéro de tél.", class: "form-control" %>
                            </div>
                            <div class="form-group">
                            <%= f.text_field :email, autofocus: true, autocomplete: "email", placeholder: "Adresse email", class: "form-control" %>
                            </div>
                            <div class="form-group">
                            <%= f.text_area :message, autofocus: true, autocomplete: "message", placeholder: "Message, travaux à réaliser ...", class: "form-control" %>
                            </div>
                            <div class="actions mt-5">
                            <%= submit_tag "Valider", :class => 'w-100 btn btn-primary'  %>
                          </div>
                       <% end %>
                    </div>
                    <br>
                </div>
            </div>
        </div>
    </div>
</section>